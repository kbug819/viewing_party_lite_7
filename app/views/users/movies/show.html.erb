<%= button_to "Return to Discover Page", "/users/#{@user.id}/discover", method: :get %>
<%= button_to "Create a Viewing Party", "/users/#{@user.id}/movies/#{@movie_details[:id]}/viewing_parties/new", method: :get %>
<h1><%= @movie_details[:title] %></h1>
<p>Vote Average: <%= @movie_details[:vote_average] %></p>
<p>Runtime: <%= @movie_details[:runtime] / 60 %> hours, <%= @movie_details[:runtime] % 60 %> minutes</p>
<p>Genres:</p>
<% @movie_details[:genres].each do |genre| %>
  <ul>
    <li><%= genre[:name] %></li>
  </ul>
<% end %>
<p>Summary: <%= @movie_details[:overview] %></p>
<p>Cast:</p>
<% @movie_credits.each do |cast| %>
  <ul>
    <li><%= cast[:character] %> - <%= cast[:name] %></li>
  </ul>
<% end %>
<p>Number of Reviews: <%= @movie_reviews.count %></p>
<p>Reviews:</p>
<% @movie_reviews.each do |review| %>
  <ul>
    <li>Author: <%= review[:author] %></br>
        <%= review[:content] %></li></br>
  </ul>
<% end %>